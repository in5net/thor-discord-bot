generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @db.Char(18)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  counts     Json?

  @@map("users")
}

model Playlist {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  uid        String   @db.Char(18)
  name       String
  songs      Json[]

  @@unique([uid, name])
  @@map("playlists")
}

model Ratio {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now())
  text       String   @unique

  @@map("ratios")
}

model Image {
  id        Int    @id @default(autoincrement())
  file_name String @unique
  size      Int

  @@map("images")
}

model Y7Image {
  id        Int    @id @default(autoincrement())
  file_name String @unique
  size      Int
  width     Int    @db.SmallInt
  height    Int    @db.SmallInt

  @@map("y7_images")
}

model Y7GIF {
  id        Int    @id @default(autoincrement())
  file_name String @unique
  size      Int
  width     Int    @db.SmallInt
  height    Int    @db.SmallInt
  frames    Int    @db.SmallInt

  @@map("y7_gifs")
}
