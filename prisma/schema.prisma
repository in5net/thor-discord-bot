generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @db.Char(18) // Discord uid 
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  counts     Json?

  @@map("users")
}

model Playlist {
  id         BigInt   @id @default(autoincrement())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  uid        String   @db.Char(18)
  name       String
  songs      Json[]

  @@unique([uid, name])
  @@map("playlists")
}

model Ratio {
  id         BigInt   @id @default(autoincrement())
  created_at DateTime @default(now())
  text       String   @unique

  @@map("ratios")
}
