{
  "name": "raya-discord-bot",
  "private": true,
  "scripts": {
    "postinstall": "husky install",
    "commit": "commit",
    "update": "export NPM_CHECK_INSTALLER=pnpm; npm-check -u && cd bots/jay && npm-check -u && cd ../raya-thor && npm-check -u && cd ../../packages/database && npm-check -u && cd ../limitless && npm-check -u && cd ../storage && npm-check -u",
    "lint": "xo",
    "dev:raya": "turbo run dev --filter raya-thor",
    "start:raya": "turbo run start --filter raya-thor",
    "dev:jay": "turbo run dev --filter jay",
    "start:jay": "turbo run start --filter jay",
    "deploy": "turbo run deploy"
  },
  "devDependencies": {
    "tsconfig": "workspace:*",
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@commitlint/prompt-cli": "^17.6.5",
    "husky": "^8.0.3",
    "typescript": "5.1.3",
    "xo": "^0.54.2"
  }
}
